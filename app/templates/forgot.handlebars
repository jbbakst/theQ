<div class="container login">
	<div class="row">
		<div class="col-lg-4 col-sm-3 col-0"></div>
		<div class="col-lg-4 col-sm-6 col-12">
			<div class="panel">
				<div class="panel-heading">
					<h1 class="panel-title text-center">forgot your password?</h1>
				</div>
				<form>
					<fieldset>
						<legend>enter your email and we'll send you password reset instructions.</legend>
						<div class="form-group">
							<label for="email">Email</label>
							<input type="text" class="form-control" placeholder="Email">
						</div>
						<row>
							<span class="pull-left">{{#linkTo 'register'}}New to *******? Register{{/linkTo}}</span>
							<button type="submit" class="btn btn-default col-4 pull-right">Submit</button><br />
						</row>
					</fieldset>
				</form>
			</div>
		</div>
	</div>
</div>